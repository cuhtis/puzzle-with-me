<h1 class="title center">Puzzle With Me</h1>

<h3>{{host.username}}'s Game</h3>

{{#if isHost}}
  <!-- Target -->
  <input id="copyURLText" value={{copyURL}}>

  <!-- Trigger -->
 <button class="btn" data-clipboard-target="#copyURLText">
    <img src="https://zenorocha.github.io/clipboard.js/assets/images/clippy.svg" height="13" alt="Copy to clipboard">
  </button>

  <script src="https://cdn.jsdelivr.net/clipboard.js/1.5.3/clipboard.min.js"> </script>
  <script>
    var clipboard = new Clipboard('.btn'); 
    clipboard.on('success', function(e) {
      console.log(e);
    });
    clipboard.on('error', function(e) {
      console.log(e);
    });
  </script>
{{/if}}

<p class="text center">{{timer}}</p>

{{#if isHost}}

<div class="player_box" id="my_box">
  <h3>{{me.username}} (HOST)</h3>
</div>

{{else}}

<div class="player_box" id="my_box">
  <h3>{{me.username}}</h3>
</div>

<div class="player_box">
  <h3>{{host.username}} (HOST)</h3>
</div>

{{/if}}

{{#each others}}
<div class="player_box">
 <h3>{{this.username}}</h3> 
</div>
{{/each}}

<a href="/" class="btn btn-default btn-lg">Quit</a>
